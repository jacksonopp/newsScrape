<div class="row mt-5">
    <div class="col-12">
        <a href="/">&#8592; back</a>
        <h1 id="title" data-id="{{_id}}">{{title}}</h1>
        <span><a target="_blank" href="{{url}}">view article</a> | upvotes: <strong>{{upvotes}}</strong> | posted by: u/{{user}}</span>
    </div>

    <div class="col-12 mt-3">
        <h2>comments</h2>
        <form>
            <div class="form-group">
                <label for="comment-area">comment</label>
                <textarea class="form-control" name="comment-area" id="comment-area" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label for="author">author</label>
                <input type="text" class="form-control" name="author" id="author"></input>
            </div>
            
            <button type="submit" id="submit-btn" class="btn btn-primary">Submit</button>
        </form>
        {{#each comments}}
            <h4>{{author}}</h4>
            <p>{{body}}</p>
            <hr />
        {{/each}}
    </div>
</div>
<script src="/js/submitComment.js"></script>