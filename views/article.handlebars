<div class="row mt-5">
    <div>
        <h1 id="title" data-id="{{_id}}">{{title}}</h1>
        <a target="_blank" href="{{url}}">link</a>
    </div>
    <div class="col-12 mt-3">
        <h2>comments</h2>
        <form>
            <div class="form-group">
                <label for="comment-area"></label>
                <textarea class="form-control" name="comment-area" id="comment-area" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label for="author"></label>
                <input type="text" class="form-control" name="author" id="author"></input>
            </div>
            
            <button type="submit" id="submit-btn" class="btn btn-primary">Submit</button>
        </form>
        {{#each comments}}
            <h4>{{author}}</h4>
            <p>{{body}}</p>
        {{/each}}
    </div>
</div>
<script src="/js/submitComment.js"></script>