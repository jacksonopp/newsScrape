<script src="/js/scrapeAdd.js"></script>
{{#each article}}

    <div class="row mt-3">
        <div class="col-md-8">
            <h2>{{title}}</h2>
            <p>Posted by: u/{{user}}</p>
        </div>
        <div class="col-md-3">
            <p>Upvotes: {{upvotes}}</p>
            <p>{{time}}</p>
            <a href="/article/{{_id}}">View Article</a>
        </div>
    </div>
    <hr />

{{/each}}